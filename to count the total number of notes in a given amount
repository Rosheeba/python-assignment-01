def count_notes(amount):
    notes = [2000, 500, 200, 100, 50, 20, 10, 5, 2, 1]
    note_count = {}
    
    for note in notes:
        if amount >= note:
            count = amount // note
            amount %= note
            note_count[note] = count

    return note_count

# Example usage
amount = 4327
result = count_notes(amount)
for note, count in result.items():
    print(f"â‚¹{note} notes: {count}")
